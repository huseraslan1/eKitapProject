@model List<Proje.Models.KargoFirmasi>
@{
    ViewBag.Title = "Liste";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <head>


        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" />
        <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>

        <script src="~/Scripts/jquery-3.3.1.min.js"></script>
        <link href="~/Content/toastr.min.css" rel="stylesheet" />

        <script src="~/Scripts/toastr.min.js"></script>
    </head>

    <div>
        <a href="/Kargo/Ekle" class="p-2"><button class="btn btn-primary">Yeni Kargo Firması Ekle</button></a>

    </div>
<div class="card-body">
    <div class="table-responsive">
        <br />
        <table id="kargoListe" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Numara</th>
                    <th>Sirket</th>
                    <th>Adres</th>
                    <th>Eposta</th>
                    <th>Telefon</th>
                    <th>WebSitesi</th>

                    <th>Güncelle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Sirket</td>
                        <td>
                            <button type="button" data-placement="top" data-toggle="modal" title="Görüntüle" class="btn btn-primary btn-xs" style="font-size:x-small" data-target="#exampleModalCenter_@item.Id">
                                Adres Oku
                            </button>
                            <div class="modal fade" id="exampleModalCenter_@item.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">Adres</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            @Html.Raw(item.Adres)
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>@item.Eposta</td>
                        <td>@item.Telefon</td>
                        <td>@item.WebSitesi</td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="/Kargo/Guncelle/@item.Id">Güncelle</a>
                        </td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="/Kargo/Sil/@item.Id"
                               onclick="return confirm('Bu Kargo firmasını silmek istediğinizden emin misiniz ?')">Sil</a>
                        </td>


                    </tr>

                </tbody>
            }
        </table>
    </div>


</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#kargoListe').DataTable();
    });
</script>

