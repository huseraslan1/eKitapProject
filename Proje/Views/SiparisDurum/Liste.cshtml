@model List<Proje.Models.SiparisDurumu>
@{
    ViewBag.Title = "Liste";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>


    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <link href="~/Content/toastr.min.css" rel="stylesheet" />

    <script src="~/Scripts/toastr.min.js"></script>
</head>

<div>
    <a href="/SiparisDurum/Ekle" class="p-2"><button class="btn btn-primary">Yeni Durum Ekle</button></a>

</div>

<div class="card-body">
    <div class="table-responsive">
        <br />
        <table id="siparisDurum" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Numara</th>
                    <th>Sipariş Durum</th>
                    <th>Detay</th>

                    <th>Güncelle</th>
                    <th>Sil</th>

                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>

                        <td>@item.Id</td>
                        <td>@item.Tanim</td>
                        <td>@item.Detay</td>



                        <td>
                            <a class="btn btn-primary btn-sm" href="/SiparisDurum/Guncelle/@item.Id">Güncelle</a>
                        </td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="/SiparisDurum/Sil/@item.Id"
                               onclick="return confirm('Bu Durumu silmek istediğinizden emin misiniz ?')">Sil</a>
                        </td>


                    </tr>

                </tbody>
            }
        </table>
    </div>


</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#siparisDurum').DataTable();
    });
</script>

