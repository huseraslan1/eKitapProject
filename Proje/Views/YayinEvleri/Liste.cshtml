@model List<Proje.Models.YayinEvleri>
@{
    ViewBag.Title = "Liste";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>


    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>



</head>

<div class="card-body">
    <div class="table-responsive">
        <table id="yayinEvi" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Numara</th>
                    <th>yayınEvi Adı</th>

                    <th>Güncelle</th>
                    <th>Sil</th>

                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>

                        <td>@item.Id</td>
                        <td>@item.Tanim</td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="/YayinEvleri/Guncelle/@item.Id">Güncelle</a>
                        </td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="/YayinEvleri/Sil/@item.Id"
                               onclick="return confirm('Bu YayınEvini silmek istediğinizden emin misiniz ?')">Sil</a>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#yayinEvi').DataTable();
        });
    </script>
</div>

